<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/news_item_margin_all"
    android:background="@drawable/layout_news_shadow">

    <ImageView
        android:src="@drawable/image_man"
        android:id="@+id/imageNewsItem"
        android:layout_margin="@dimen/news_image_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textNewsTitle"
        android:textAlignment="center"
        android:textSize="21sp"
        android:textColor="@color/newsColorTitleItem"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/news_text_title_margin_start_end"
        android:layout_marginEnd="@dimen/news_text_title_margin_start_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageNewsDecor"
        android:layout_marginTop="@dimen/news_item_margin_all"
        android:layout_gravity="center"
        android:src="@drawable/decor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textNewsDescription"
        android:layout_marginTop="@dimen/news_text_description_margin_top"
        android:layout_marginBottom="@dimen/news_text_description_margin_bottom"
        android:layout_marginStart="@dimen/news_text_description_margin_start_end"
        android:layout_marginEnd="@dimen/news_text_description_margin_start_end"
        android:maxLines="3"
        android:ellipsize="end"
        android:textAlignment="center"
        android:textColor="@color/newsColorDescriptionItem"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorTitle">

        <TextView
            android:id="@+id/textNewsDate"
            android:layout_gravity="center"
            android:drawableStart="@drawable/calendar"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>