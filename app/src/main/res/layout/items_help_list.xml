<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutItemHelp"
        android:orientation="vertical"
        android:background="@color/colorHelpLayoutItem"
        android:layout_marginTop="@dimen/help_item_interval"
        android:layout_marginStart="@dimen/help_item_interval"
        android:layout_marginEnd="@dimen/help_item_interval"
        android:layout_width="@dimen/help_item_width"
        android:layout_height="@dimen/help_item_height">

        <ImageView
            android:id="@+id/imageHelpItem"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/help_item_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textHelpItem"
            android:layout_marginTop="@dimen/help_item_margin_top"
            android:layout_gravity="center"
            style="@style/HelpTextItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>