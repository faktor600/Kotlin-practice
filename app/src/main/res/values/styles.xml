<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTitle</item>
        <item name="colorPrimaryDark">@color/colorTitle</item>
        <item name="colorAccent">@color/colorTitle</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">@font/font_title</item>
        <item name="android:layout_marginBottom">@dimen/app_bar_text_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/app_bar_text_margin_top</item>
    </style>

    <style name="ProfileTextMainStyle">
        <item name="android:textColor">@color/colorProfileTextMain</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginStart">@dimen/profile_margin_left_top_bottom</item>
    </style>

    <style name="ProfileTextMainStyle.User">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProfileTextMainStyle.Other">
        <item name="android:textSize">@dimen/profile_text_main_size</item>
    </style>

    <style name="ProfileTextItemStyle">
        <item name="android:textColor">@color/colorProfileTextItems</item>
        <item name="android:textSize">@dimen/profile_text_items_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginStart">@dimen/profile_margin_left_top_bottom</item>
    </style>
    
    <style name="HelpTextItemStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorHelpTextItem</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ProfileDialogItemsStyle">
        <item name="android:textSize">@dimen/profile_dialog_text_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SearchResultStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextResult</item>
    </style>

    <style name="SearchTextItemStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextItem</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationHelpTextStyle">
        <item name="android:layout_marginTop">@dimen/navigation_help_text_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/navigation_help_text_margin_top_bottom</item>
        <item name="android:textColor">@color/navigationHelpTextColor</item>
        <item name="android:textSize">@dimen/navigation_help_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AuthenticationLoginDescription">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#b3000000</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
    </style>

    <style name="AuthenticationPlainTextDescription">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">#61000000</item>
    </style>

    <style name="AuthenticationForgetPasswordAndRegistration">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#66a636</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
</resources>
